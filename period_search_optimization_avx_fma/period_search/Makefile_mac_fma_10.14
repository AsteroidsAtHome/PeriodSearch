MY_LIBS=trifac.o areanorm.o sphfunc.o ellfit.o ludcmp.o lubksb.o mrqmin.o mrqcof_fma.o\
		curv.o blmatrix.o conv_fma.o covsrt.o phasec.o matrix.o bright_fma.o memory.o\
	dot_product.o gauss_errc_fma.o VersionInfo.o CpuInfo.o systeminfo.o TargetInstructionSet.o

PROGS = Period_search_BOINC_macos_10215_x86_64_fma_Release

all: $(PROGS)

clean:
	/bin/rm -f $(PROGS) *.o libstdc++.a

Period_search_BOINC_macos_10215_x86_64_fma_Release: period_search_BOINC.cpp $(MY_LIBS) $(BOINC_BUILD_DIR)/libboinc_api.a $(BOINC_BUILD_DIR)/libboinc.a
	$(CXX) $(CXXFLAGS) -o $@ $(MY_LIBS) $< -pthread \
	$(BOINC_BUILD_DIR)/libboinc_api.a \
	$(BOINC_BUILD_DIR)/libboinc.a -lm \
    -framework AppKit

%.o: %.c
	$(CC) $(CFLAGS) -c $<
